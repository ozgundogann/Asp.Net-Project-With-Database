@page "{id}"
@model RecipeApp.Pages.Recipe.Ingredient.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create" asp-route-id="@Model.Recipe?.Id" class="btn btn-secondary" >Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Ingredient[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ingredient[0].Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ingredient[0].Unit)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ingredient[0].RecipeId)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Ingredient) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Unit)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RecipeId)
            </td>
            <td>
                    <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-dark">Edit</a> |
                    <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-dark">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
